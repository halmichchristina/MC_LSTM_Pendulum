# general
experiment_name: mclstm
global_seed: 123

# Model
model: mclstm
mass_input_size: 1
aux_input_size: 1
hidden_size: 10
out_size: 1
redistribution_type: linear

# Data
dataset: addition
num_samples: 10000
batch_size: 128
num_epochs: 50
data_seed: 1806
min_mass: 0.
max_mass: .5

# Training
lr: 5e-2
num_workers: 8
device: cuda
log_tensorboard: True
log_step: 5
save_weights_every: 10
